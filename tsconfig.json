{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2015", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["bun-types", "@types/node"],
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true
  },
  "include": ["tool/**/*.ts", "plugin/**/*.ts"]
}
